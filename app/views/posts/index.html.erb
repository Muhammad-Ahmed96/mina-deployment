

<div class="container">
  <p style="color: green"><%= notice %></p>
  <h1>Posts</h1>
  <div id="posts">
    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Actions</th>
        <tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td>
              <%= link_to "Show", post, class: 'btn btn-sm btn-primary' %>
              <%= link_to "Edit", edit_post_path(post), class: 'btn btn-sm btn-warning' %>
              <%= link_to "Delete", post, class: 'btn btn-sm btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure want to delete?'} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "New post", new_post_path, class: "btn btn-primary" %>
</div>

